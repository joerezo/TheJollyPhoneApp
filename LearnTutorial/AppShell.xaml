<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LearnTutorial.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LearnTutorial.Pages"
    FlyoutIcon="Octopus.png">


    <Shell.FlyoutHeader>
    <Grid HeightRequest="100" BackgroundColor="Cyan" >
            <Image Source="octopus.png"></Image>
    </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Navigation">
        <ShellContent Title="Observations"
                      ContentTemplate="{DataTemplate local:ObservationPage}"/>
        <ShellContent Title="Conditions"
                      ContentTemplate="{DataTemplate local:ConditionsPage}"/>
        <ShellContent Title="Locations"
                      ContentTemplate="{DataTemplate local:LocationPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Review Records">
        <ShellContent Title="Review Records"
                      ContentTemplate="{DataTemplate local:ReviewDBPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Credits">
        <ShellContent Title="Credits"
                      ContentTemplate="{DataTemplate local:Credits}"/>
    </FlyoutItem>
</Shell>
